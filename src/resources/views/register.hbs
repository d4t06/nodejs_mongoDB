<style>
    .register-text {
        font-size: 1.5rem;
    }
</style>
<form class="login-form" method="POST" action="/register">
<h1>Đăng ký</h1>
    <div class="form-group">
        <label for="name">Username</label>
        <input value="{{product.name}}" id="username" name="username" type="text">
    </div>
    <div class="form-group">
        <label for="image">Password</label>
        <input value="{{product.image}}" id="password" name="password" type="text">
    </div>
    {{!-- <div class="form-group">
        <label for="image">Confirm Password</label>
        <input value="{{product.image}}" id="password" name="password" type="text">
    </div> --}}
    {{#if message}}
    <span class="messgae-container">{{message}}</span>
    {{/if}}
    <div class="login-with">
        <a href="/auth/facebook" class="login-facebook login-option">
            Facebook
        </a>
        <a href="href="/auth/facebook"" class="login-google login-option">
            Google
        </a>
    </div>
    <button class="login-form-btn" type="submit">Đăng ký</button>
    <span class="register-text">Đã có tài khoản 
        <a href="/login">Đăng nhập ngay</a>
    </span>
</form>
